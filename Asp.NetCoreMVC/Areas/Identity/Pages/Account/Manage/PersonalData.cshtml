@page

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PersonalDataModel

@{
	ViewData["Title"] = Localizer["MenuHeader"];
	ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
	<div class="col-md-6">
		<p>@Localizer["MenuSubContent"]</p>
		<p>
			<strong>@Localizer["MenuDeleteContent"]</strong>
		</p>
		<form id="download-data"
					asp-page="DownloadPersonalData"
					method="post"
					class="form-group">
			<button class="btn btn-primary shadow-sm" type="submit">
				@Localizer["BtnDownload"]
			</button>
		</form>
		<p>
			<a id="delete"
				 asp-page="DeletePersonalData"
				 class="btn btn-secondary shadow-sm">
				@Localizer["BtnDelete"]
			</a>
		</p>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<Pie>
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = "Home Page";
	ViewData["PiesOfTheWeek"] = Localizer["PiesOfTheWeek"];
}

<div class="text-center">
	<h1 class="display-4">@ViewData["PageTitle"]</h1>
	<br />
	<partial name="_PieSlider" />
	<br />
	<h1 class="display-4">@ViewData["PiesOfTheWeek"]</h1>
	<br />
	<div class="row row-cols-1 row-cols-md-2">
		@foreach (var pie in @Model)
		{
			<partial name="_PieOfTheWeek" model="@pie" />
		}
	</div>
</div>